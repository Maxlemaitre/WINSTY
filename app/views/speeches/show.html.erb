<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= @speech.url %>
      <%= @speech.description %>
      <%= @speech.length_max %>
      <%= @speech.user.first_name %>
      <%= cl_image_tag @speech.user.photo, height: 50, width: 50, radius: :max, crop: :fill, gravity: :face %>

      <%= simple_form_for [@speech, Review.new] do |f| %>
        <%= f.input :content %>
          <% if @speech.reviews.count < 2 %>
            <%= f.submit "add a review", class: "btn btn-primary" %>
          <% else %>
            <%= f.submit "add a review", id: "new-review", class: "btn btn-primary" %>
          <% end %>
      <% end %>

      <%= link_to "Delete my speech", speech_path(@speech), method: :delete, data: { confirm: "Are you sure you want to delete your speech ?" }   %>
      <% @speech.reviews.each do |review| %>
        <ul class="list-inline list-unstyled">
          <li><%= cl_image_tag review.user.photo, height: 50, width: 50, radius: :max, crop: :fill, gravity: :face %></li>
          <li><%= review.content %></li>
          <li><%= review.user.first_name %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
